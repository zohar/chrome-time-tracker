{
  "manifest_version": 3,
  "name": "Time Tracker Pro",
  "version": "1.0.0",
  "description": "Professional time tracking extension with task management and reporting",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Time Tracker Pro"
  },
  "options_page": "options.html"
}